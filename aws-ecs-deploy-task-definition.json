{
  "family": "carai-api-task",
  "containerDefinitions": [
    {
      "name": "carai-api",
      "image": "657214731516.dkr.ecr.us-east-1.amazonaws.com/carai-api:latest",
      "cpu": 512,
      "memory": 2048,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::carai-api/variables/.env",
          "type": "s3"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/CaraiAPI-Prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "readonlyRootFilesystem": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 60,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "taskRoleArn": "arn:aws:iam::657214731516:role/ECS_Task_CaraiAPI_Production",
  "executionRoleArn": "arn:aws:iam::657214731516:role/ECS_Task_CaraiAPI_Production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "2048",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}
